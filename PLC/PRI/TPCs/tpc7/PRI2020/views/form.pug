extends layout

block content
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-blue-grey
            h2 Registo de Aluno
        form.w3-container(action='/alunos' method='POST')
            label.w3-text-blue-grey
                b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='Nome')
            label.w3-text-blue-grey
                b Número / Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='Número')
            label.w3-text-blue-grey
                b Link para o repositório no Git
                    input.w3-input.w3-border.w3-light-grey(type='text' name='Git')
            b.w3-text-blue-grey Selecionar TPCS feitos
                    br
                    label(class="checkbox-inline")
                        input(type='checkbox' name='tpc1') 
                        b.w3-text-black   TPC1
                        br
                    label
                        input(type='checkbox' name='tpc2') 
                        b.w3-text-black   TPC2
                        br
                    label(class="checkbox-inline")
                        input(type='checkbox' name='tpc3')
                        b.w3-text-black   TPC3
                        br 
                    label(class="checkbox-inline")
                        input(type='checkbox' name='tpc4')
                        b.w3-text-black   TPC4
                        br 
                    label(class="checkbox-inline")
                        input(type='checkbox' name='tpc5')
                        b.w3-text-black   TPC5
                        br 
                    label(class="checkbox-inline")
                        input(type='checkbox' name='tpc6')
                        b.w3-text-black   TPC6
                        br 
            br
            input.w3-btn.w3-blue-grey-blue-greyw3-btn.w3-border.w3-margin-bottom.w3-left.w3-blue-grey(type='submit' value='Registar')
            input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-blue-grey(type='reset' value='Limpar valores')
    .w3-container.w3-blue-grey
        footer.w3-container
            p
                a(href="/") Voltar à página principal