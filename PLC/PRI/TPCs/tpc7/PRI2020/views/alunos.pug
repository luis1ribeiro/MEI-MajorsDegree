extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue-grey
            h2 Lista de Alunos
        if lista.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th Número
                        th Nome
                        th Git
                        th
                    each a in lista
                        tr
                            td
                                a(href="/alunos/:"+a._id)= a.Número
                            td= a.Nome
                            td= a.Git
                            td
                                a(href="/alunos/editar/:"+a._id, class="w3-button w3-khaki w3-round-small") Editar
                                a(href="/alunos/delete/:"+a._id, class="w3-button w3-deep-orange w3-round-small") Delete
        else
            div(class="w3-container")
                p Ainda não há alunos.
    .w3-container.w3-blue-grey
        footer.w3-container
            p
                a(href="/") Voltar à página principal