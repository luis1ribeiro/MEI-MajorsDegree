extends layout

block content
  .w3-container
        h3 Tabela Periódica - GraphDB
        h9 Esta é a página relativa aos Elementos Químicos da Tabela Periódica.
  .w3-container
    .w3-card-4
      header.w3-container.w3-orange.w3-margin-top
        h4 Elementos Químicos
      table.w3-table-all(id="TP")
        thead
            tr
                th Nome do Elemento
                th Símbolo 
                th Número Atómico
        tbody
            each e in elementos
                tr
                    td
                        a(href="/elementos/"+e.id)= e.nomeElemento
                    td= e.simbolo
                    td= e.numeroAtomico
  footer.w3-container.w3-orange.w3-margin-top(style="font-size:10px")
      pre
        i(class="fa fa-home")     
        a(href="/") Voltar à Home Page